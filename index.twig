{# index.twig #}
{% extends "layout.twig" %}

{% block index %}

	{% set list_components = [
    {
      'id':'boxicon',
      'name': 'Box Icon'
    },
    {
      'id':'most-read-pages',
      'name': 'Most Read Pages'
    },
    {
      'id':'tags',
      'name': 'Tags'
    },
    {
      'id':'coloured-infobox',
      'name': 'Info Box'
    },
    {
      'id':'post',
      'name': 'Post'
    },
    {
      'id':'image-link',
      'name': 'Image Link'
    },
    {
      'id':'pager',
      'name': 'Pager'
    }
	] %}

  {% for component in list_components %}
  	<div class="feb">
      <h2>{{ component.name }}</h2>
      <div class="component--demo">
      {% include "components/" ~ component.id ~ "/" ~ component.id ~ ".html" %}
      </div>
      <div class="component--source">
        <div class="component--html">
          <pre  class="brush: php">
            {% include "components/" ~ component.id ~ "/" ~ component.id ~ ".html" %}
          </pre>
        </div>
        <div class="component--css">
          <pre class="brush: css">
          {% spaceless %}
            {% include "components/" ~ component.id ~ "/" ~ component.id ~ ".css" %}
          {% endspaceless %}
          </pre>
        </div>
      </div>
  	</div>
  {% endfor %}

{% endblock %}
