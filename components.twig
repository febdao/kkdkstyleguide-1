{# components.twig #}
{% extends "includes/layout.twig" %}

{% block components %}

	{% set list_components = [
    {
      'id':'boxicon',
      'name': 'Box Icon'
    },
    {
      'id':'most-read-pages',
      'name': 'Most Read Pages'
    },
    {
      'id':'tags',
      'name': 'Tags'
    },
    {
      'id':'coloured-infobox',
      'name': 'Info Box'
    },
    {
      'id':'post',
      'name': 'Post'
    },
    {
      'id':'image-link',
      'name': 'Image Link'
    },
    {
      'id':'pager',
      'name': 'Pager'
    },
    {
      'id':'banner',
      'name': 'Banner'
    },
    {
      'id':'social',
      'name': 'Social'
    },
    {
      'id':'search',
      'name': 'Search'
    },
    {
      'id':'filter',
      'name': 'Filter'
    }
	] %}

  {% for component in list_components %}
  	<div class="component--item">
      <h2 class="component--title">{{ component.name }}</h2>
      <div class="component--demo">
      {% include "components/" ~ component.id ~ "/" ~ component.id ~ ".html" %}
      </div>
      <button class="show-code">Show/Hide Code</button>
      <div class="component--source element-invisible">
        <div class="component--html">
          <h2 class="component--source--title">Markup</h2>
          <pre  class="brush: php">
            {% include "components/" ~ component.id ~ "/" ~ component.id ~ ".html" %}
          </pre>
        </div>
        <div class="component--css">
          <h2 class="component--source--title">Style</h2>
          <pre class="brush: css">
          {% spaceless %}
            {% include "components/" ~ component.id ~ "/" ~ component.id ~ ".css" %}
          {% endspaceless %}
          </pre>
        </div>
        <button class="hide-code">Hide Code</button>
      </div>
  	</div>
  {% endfor %}

{% endblock %}
